<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="portal_layout_remove_security" inherit_id="portal.portal_layout">
            <xpath expr="//div[@class='o_portal_my_security mt-3']" position="replace">
            </xpath>
        </template>
    </data>
    <data>
        <record>
            <template id="portal_my_details_fields_remove_company_vat" inherit_id="portal.portal_my_details_fields">
                <xpath expr="//div[contains(@t-attf-class, 'mb-1') and contains(@t-attf-class, 'col-xl-6')]" position="replace"/>
                <xpath expr="//div[contains(@t-attf-class, 'mb-1') and contains(@t-attf-class, 'col-xl-6')]" position="replace"/>
                <xpath expr="//div[@t-if='not partner_can_edit_vat'][contains(@class, 'col-12') and contains(@class, 'd-none')]" position="replace"/>
                <xpath expr="//div[contains(@t-attf-class, 'mb-3') and label/@for='city']" position="replace"/>
                <xpath expr="//div[contains(@t-attf-class, 'mb-3') and label/@for='zipcode']" position="replace"/>
                <xpath expr="//div[contains(@t-attf-class, 'mb-3') and label/@for='country_id']" position="replace"/>
                <xpath expr="//div[contains(@t-attf-class, 'mb-3') and label/@for='state_id']" position="replace"/>
            </template>
        </record>
        <record id="portal_my_details_favorite_drink" model="ir.ui.view">
            <field name="name">portal.my.details.favorite_drink</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="portal.portal_my_details_fields"/>
            <field name="arch" type="xml">
                <xpath expr="//div[contains(@t-attf-class, 'mb-3') and contains(phone)]" position="after">
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="favorite_drink" string="Favorite Drink"/>
                        <div class="col-md-7">
                            <input type="text" name="favorite_drink" t-att-value="request.params.get('favorite_drink', partner.favorite_drink or '')" class="form-control"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
