<?xml version="1.0" encoding="utf-8"?>
<!-- views/my_account_portal_view_new_fields.xml -->

<odoo>
    <record id="portal_my_details_favorite_drink" model="ir.ui.view">
        <field name="name">portal.my.details.favorite_drink</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="portal.portal_my_details_fields"/>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@t-attf-class, 'mb-3') and contains(@t-attf-class, 'phone')]" position="after">
                <div class="form-group row">
                    <label class="col-md-3 col-form-label" for="favorite_drink" string="Favorite Drink"/>
                    <div class="col-md-7">
                        <input type="text" name="favorite_drink" t-att-value="request.params.get('favorite_drink', partner.favorite_drink or '')" class="form-control"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>